#!/bin/bash

# --- CONFIGURACI√ìN DE PAR√ÅMETROS ---
BIN_DIR="$HOME/.local/bin"
URL_EJEMPLO="https://www.youtube.com/@maxlinux2k"
GEOMETRY="550x300" 
DOWNLOADER_SCRIPT="$BIN_DIR/1_downloader.sh"
CONSOLIDATOR_SCRIPT="$BIN_DIR/4_consolidator.sh"
DOWNLOAD_ROOT="$HOME/public_html/You2Pub" # Carpeta ra√≠z de todas las descargas


# ----------------------------------------------------------------------
## 1Ô∏è‚É£ PRIMERA VENTANA: SELECTOR DE MODO (yad --form con Combo Box)
# ----------------------------------------------------------------------

EXPLANATORY_TEXT="Selecciona el modo de operaci√≥n que deseas realizar. 'Descargador' es la opci√≥n predeterminada."

MODE_RESULT=$(yad \
    --title="üöÄ You2Pub - Lanzador (Paso 1/2)" \
    --geometry="$GEOMETRY" \
    --button="Cancel:1" \
    --button="Siguiente:0" \
    --text-align=center \
    --text="$EXPLANATORY_TEXT" \
    --form \
    --field="Modo de Operaci√≥n:CB" "Descargador!Consolidador" \
)

# Capturar c√≥digo de salida para Cancelar
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
    echo "Lanzador cancelado por el usuario."
    exit 1
fi

# Parsear y limpiar el modo seleccionado (La salida de :CB es simple)
IFS='|' read -r MODO <<< "$MODE_RESULT"
MODO=$(echo "$MODO" | xargs)


# ----------------------------------------------------------------------
## 2Ô∏è RAMIFICACI√ìN
# ----------------------------------------------------------------------

# --- A) MODO CONSOLIDAR ---
if [ "$MODO" == "Consolidador" ]; then
    
    echo "Modo seleccionado: Consolidador."
    CONSOLIDA_COMMAND="$CONSOLIDATOR_SCRIPT; echo ' '; echo '--- Consolidaci√≥n Finalizada ---'; read -p 'Presiona ENTER para cerrar.'"

    # Ejecuci√≥n del Consolidador con Fallback
    if command -v gnome-terminal &> /dev/null; then
        echo "Usando gnome-terminal..."
        gnome-terminal -- /bin/bash -c "$CONSOLIDA_COMMAND"
    elif command -v xterm &> /dev/null; then
        echo "gnome-terminal no encontrado. Usando xterm..."
        xterm -e /bin/bash -c "$CONSOLIDA_COMMAND"
    else
        echo "ERROR: No se encontr√≥ un terminal para ejecutar la Consolidaci√≥n."
        exit 1
    fi

    echo "Consolidador lanzado. Lanzador finalizado."
    exit 0
fi


# ----------------------------------------------------------------------
## 3Ô∏è‚É£ SEGUNDA VENTANA: DESCARGADOR
# ----------------------------------------------------------------------

# Si el modo es "Descargador", la primera ventana se cierra y se abre la segunda.
echo "Modo seleccionado: Descargador. Abriendo segunda ventana..."

DOWNLOAD_RESULT=$(yad \
    --title="üöÄ You2Pub - Lanzador (Paso 2/2)" \
    --geometry="$GEOMETRY" \
    --button="gtk-cancel:1" \
    --button="gtk-next!Siguiente:0" \
    --text-align=center \
    --text="**Introduce la URL y selecciona la calidad.**\n\nPulsa Siguiente para iniciar la descarga." \
    --form \
    --field="URL del Canal/Playlist:TEXT" "$URL_EJEMPLO" \
    --field="Calidad de V√≠deo:CB" "SD!HD" \
)

# Capturar c√≥digo de salida para Cancelar
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
    echo "Descarga cancelada por el usuario en el Paso 2."
    exit 1
fi

# Parsear los datos de descarga (URL | Calidad)
IFS='|' read -r URL RESOLUCION <<< "$DOWNLOAD_RESULT"
URL=$(echo "$URL" | xargs)

# ----------------------------------------------------------------------
## 4Ô∏è‚É£ EJECUCI√ìN DEL DOWNLOADER
# ----------------------------------------------------------------------

echo "Iniciando descarga de: $URL con resoluci√≥n $RESOLUCION"

DOWNLOAD_COMMAND="$DOWNLOADER_SCRIPT \"$URL\" \"$RESOLUCION\""
FINAL_COMMAND="$DOWNLOAD_COMMAND; echo ' '; echo '--- Descarga Finalizada ---'; read -p 'Presiona ENTER para cerrar.'"

# Ejecuci√≥n del Downloader con Fallback
if command -v gnome-terminal &> /dev/null; then
    echo "Usando gnome-terminal..."
    gnome-terminal -- /bin/bash -c "$FINAL_COMMAND"
elif command -v xterm &> /dev/null; then
    echo "gnome-terminal no encontrado. Usando xterm..."
    xterm -e /bin/bash -c "$FINAL_COMMAND"
else
    echo "ERROR: No se encontr√≥ un terminal para ejecutar la Descarga."
    exit 1
fi

echo "Lanzador finalizado y descarga iniciada."

